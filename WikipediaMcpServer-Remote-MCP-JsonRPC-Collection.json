					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response is JSON (not SSE)\", function () {",
									"    var contentType = pm.response.headers.get('Content-Type');",
									"    pm.expect(contentType).to.include('application/json');",
									"});",
									"",
									"pm.test(\"Response is JSON-RPC 2.0\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('jsonrpc');",
									"    pm.expect(jsonData.jsonrpc).to.eql('2.0');",
									"});",
									"",
									"pm.test(\"MCP initialization successful\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('result');",
									"    pm.expect(jsonData.result).to.have.property('capabilities');",
									"    pm.expect(jsonData.result).to.have.property('serverInfo');",
									"});",
									"",
									"pm.test(\"Remote response time reasonable\", function () {",
									"    pm.expect(pm.response.responseTime).to.be.below(15000);",
									"});",
									"",
									"pm.test(\"Protocol 2024-11-05 basic capabilities\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.result.capabilities).to.have.property('tools');",
									"    pm.expect(jsonData.result.capabilities).to.not.have.property('resources');",
